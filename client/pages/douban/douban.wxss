.page-loading {
  margin-top: 300rpx;
}

.film-list {
  background-color: #f0f0f0;
}

.page-title {
  width: 100%;
  height: 160rpx;
  align-items: flex-start;
  text-align: left;
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 50rpx;
  color: #888;
  margin-top: 30rpx;
}

.film-item {
  background-color: #fff;
  padding: 20rpx;
  margin: 20rpx 20rpx 0 20rpx;
  border-radius: 4px;
  /* box-shadow: 3px 2px 8px rgba(0,0,0,.2); */
  box-shadow: 0 0 8px rgba(0,0,0,.2);

  display: flex;
  justify-content: flex-start;

  position: relative;
}
/* 电影-图片 */
.film-image {
  display: inline-block;
  width: 200rpx;
  height: 280rpx;
  margin-right: 20rpx;
  min-width: 200rpx;
  border-radius: 4px;
  overflow: hidden;
}
.img {
  border-radius: 4px;
}

/* 电影-介绍 */
.film-info {
  display: inline-block;
}

.film-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-right: 5rpx;
}
/* .film-year {
  font-size: 30rpx;
  font-weight: normal;
  margin-right: 5rpx;
} */
/* 评分 */
.rating {
  font-size: 32rpx;
  color: #ffac2d;
  font-weight: 800;
  /* font-style: italic; */
}

.film-rating , .directors, .casts {
  font-size: 32rpx;
  max-height: 64rpx;
  line-height: 32rpx;
  overflow: hidden;
  margin-top: 15rpx;
}
